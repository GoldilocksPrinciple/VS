<Window x:Class="VinSeek.Views.ErrorConsoleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VinSeek.Views"
        mc:Ignorable="d"
        Title="Debugging Console" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label FontFamily="Century" FontSize="20" DockPanel.Dock="Top" Height="Auto" x:Name="ErrorMessage" Foreground="Red">Error Message</Label>
            <TextBox x:Name="ErrorTextBox" FontFamily="Century" FontSize="16" IsReadOnly="True" VerticalScrollBarVisibility="Visible" Height="330" Foreground="Red"/>
            <Button HorizontalAlignment="Right" Margin="0,5,5,5" Width="57" Height="24" Click="ButtonOk_OnClick" FontFamily="Century">OK</Button>
        </StackPanel>
    </Grid>
</Window>
