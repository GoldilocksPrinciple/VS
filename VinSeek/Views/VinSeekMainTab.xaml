             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:control="clr-namespace:WpfHexaEditor;assembly=WPFHexaEditor"
             xmlns:local="clr-namespace:VinSeek.Views"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="900">
    <Grid>
        <DockPanel VerticalAlignment="Stretch">
            <DockPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="300" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0*"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="5" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <DockPanel Grid.Row="0" Grid.ColumnSpan="2" HorizontalAlignment="Stretch">
                            <xctk:WatermarkTextBox x:Name="FilterEntry" Watermark="Apply a filter ..." Height="30" DockPanel.Dock="Right" HorizontalAlignment="Stretch" TextWrapping="Wrap" VerticalAlignment="Top" AutomationProperties.Name="FilterBox"/>
                        </DockPanel>
                        <ListView x:Name="PacketListView" Margin="0,20,0,0" Grid.ColumnSpan="2">
                            <ListView.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Edit Note"/>
                                    <Separator/>
                                    <MenuItem Header="Export to DAT"/>
                                    <MenuItem Header="Export Set" />
                                    <MenuItem Header="Build Set from selected Packets"/>
                                    <MenuItem Header="Export selected sets for Replay" />
                                    <Separator/>
                                    <MenuItem Header="Apply specific struct to packet"/>
                                    <MenuItem Header="Run specific scripts on packets"/>
                                </ContextMenu>
                            </ListView.ContextMenu>
